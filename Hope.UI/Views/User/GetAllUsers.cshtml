@{
}
@model List<Hope.Infrastructure.DTO.UserDTO>;

<html>
    <head>
@* 
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
 *@
    <link href="~/assets/css/hope.css" rel="stylesheet" />

    <!-- Bootstrap Bundle with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </head>


    <body>


<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4" >View All Users</h4>


                <div class="row" style="text-align:right; margin-top:-60px; padding-bottom:10px">

                <a href="~/User/Create" style="text-decoration:none"><i class="fa fa-plus" aria-hidden="true"></i>Add New User</a>

                </div>

        <!-- Bootstrap Dark Table -->
        <div class="card">
            @*<h5 class="card-header">Table Dark</h5>*@
            <div class="table-responsive text-nowrap">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Mobile Number</th>
                            <th>Join Date</th>
                            <th>Status</th>
                            <th>Shift Type  </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                            @foreach (Hope.Infrastructure.DTO.UserDTO item in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.FirstName</strong>
                                    </td>
                                    <td>@item.LastName</td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.MobileNumber
                                    </td>
                                    <td>
                                        @item.JoinDate.ToString("dd-MMM-yyyy")
                                    </td>
                                    
                                        @if (item.IsActive)
                                        {
                                            <td>
                                            <span class="badge bg-label-success me-1">Active</span>
                                            </td>
                                            
                                        }
                                        else
                                        {
                                            <td>
                                            <span class="badge bg-label-danger me-1">Pending</span>
                                            </td>
                                            
                                        }
                                        
                                   
                                    <td>@item.ShiftTypeName</td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown" style="color:white ">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="hope-menu" asp-controller="User" asp-action="Update" asp-route-Id="@item.UserId" ><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                <a class="hope-menu" asp-controller="User" asp-action="Delete" asp-route-Id="@item.UserId"><i class="bx bx-trash me-1"></i> Delete</a>
                                            </div>
                                        </div>

                                    </td>
                                </tr>
                                
                            }
                </table>
            </div>
        </div>
        <!--/ Bootstrap Dark Table -->
        </div>
    </div>
    <!-- Bootstrap Bundle with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
