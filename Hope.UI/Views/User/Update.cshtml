@model Hope.Infrastructure.DTO.UserDTO
<html>
<head>

</head>
<body>
    <div class="content-wrapper">
        <!-- Content -->
        <form asp-action="UpdateUser">
            <div class="container-xxl flex-grow-1 container-p-y">
                <h4 class="fw-bold py-3 mb-4">Update User</h4>

                <div class="card">

                    <div class="row">
                        <div class="col-md-12">

                            <div class="card-body">


                                <div class="row">
                                    <div class="col-md-4">
                                        First Name
                                        <span class="text-danger">*</span>
                                        <input type="text" id="txtFirstName" onkeypress="return OnlyText();" asp-for="FirstName" class="form-control" maxlength="50" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>

                                    </div>
                                    <div class="col-md-4">
                                        Last Name
                                        <span class="text-danger">*</span>
                                        <input type="text" asp-for="LastName" class="form-control" maxlength="50" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>

                                    </div>
                                    <div class="col-md-4">
                                        Date Of Birth
                                        <span class="text-danger">*</span>
                                        <input type="date" asp-for="DateOfBirth" class="form-control" />
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                                    </div>
                                </div>


                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">

                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        Email
                                        <span class="text-danger">*</span>
                                        <input type="text" asp-for="Email" class="form-control" maxlength="50" />
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>
                                    <div class="col-md-4">
                                        Mobile Number
                                        <input type="text" asp-for="MobileNumber" class="form-control" maxlength="10" />
                                        <span asp-validation-for="MobileNumber" class="text-danger"></span>

                                    </div>
                                    <div class="col-md-4">
                                        Gender
                                        <span class="text-danger">*</span>
                                        <div class="form-check">
                                            <input class="form-check-input" asp-for="Gender" type="radio" name="flexRadioDefault" id="flexRadioDefault1" value="false">
                                            <label class="form-check-label" for="flexRadioDefault1">
                                                Male
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" asp-for="Gender" type="radio" name="flexRadioDefault" id="flexRadioDefault1" value="true">
                                            <label class="form-check-label" for="flexRadioDefault1">
                                                Female
                                            </label>
                                            <span asp-validation-for="Gender" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">

                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        Address
                                        <span class="text-danger">*</span>
                                        <input type="text" asp-for=Address class="form-control" maxlength="50" />
                                        <span asp-validation-for="Address" class="text-danger"></span>

                                    </div>
                                    <div class="col-md-4">
                                        Shift Type
                                        <span class="text-danger">*</span>
                                        <select class="form-select" asp-for="ShiftType">
                                            <option value="" selected="selected">Please Select</option>
                                            <option value="false">Shift A</option>
                                            <option value="true">Shift B</option>
                                        </select>
                                        <span asp-validation-for="ShiftType" class="text-danger"></span>

                                    </div>
                                    <div class="col-md-4">
                                        Salary
                                        <span class="text-danger">*</span>
                                        <input type="text" asp-for="Salary" class="form-control" maxlength="10" />
                                        <span asp-validation-for="Salary" class="text-danger"></span>


                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">

                            <div class="card-body">
                                <div class="row">

                                    <div class="col-md-4">
                                        Job Descripton
                                        <select class="form-select" asp-for="JobDescriptionId" asp-items="@(new SelectList(ViewBag.JobDescription,"Id","Name"))">
                                            <option value="" selected="selected">Please Select</option>

                                        </select>

                                    </div>
                                    <div class="col-md-4">
                                        Join Date
                                        <span class="text-danger">*</span>
                                        <input type="date" asp-for="JoinDate" class="form-control" />
                                        <span asp-validation-for="JoinDate" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6"></div>
                        <div class="col-md-6">
                            <input type="hidden" asp-for="UserId" />
                            <button type="submit" class="btn btn-dark">Save</button>

                        </div>
                    </div>
                    <div class="row"> <br /></div>


                </div>
            </div>
        </form>
    </div>
    <!-- Bootstrap Bundle with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript">

        function OnlyText(evt) {

            var e = evt || event;
            var charCode = e.which || e.keyCode;

            if ((charCode > 96 && charCode < 123) || (charCode > 64 && charCode < 91))
                return true;

            return false;
        }

    </script>

</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</html>
